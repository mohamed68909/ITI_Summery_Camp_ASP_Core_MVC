<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #212529 !important;
        }

        .navbar-brand, .nav-link, .footer a {
            color: #ffffff !important;
        }

            .nav-link:hover {
                color: #0d6efd !important;
            }

        .nav-item i {
            margin-right: 6px;
        }

        .footer {
            background-color: #212529;
            color: #ccc;
            padding: 15px 0;
        }

            .footer a {
                color: #0d6efd;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark shadow">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-book-half"></i> Library System
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door-fill"></i> Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Authors" asp-action="Index">
                                    <i class="bi bi-person-lines-fill"></i> Authors
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Books" asp-action="Index">
                                    <i class="bi bi-journal-bookmark-fill"></i> Books
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Members" asp-action="Index">
                                    <i class="bi bi-people-fill"></i> Members
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Borrowings" asp-action="Index">
                                    <i class="bi bi-arrow-left-right"></i> Borrowings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reservations" asp-action="Index">
                                    <i class="bi bi-bookmark-check-fill"></i> Reservations
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Fines" asp-action="Index">
                                    <i class="bi bi-cash-coin"></i> Fines
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container mt-4 flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="footer text-center mt-auto">
            <div class="container">
                &copy; 2025 - Library System - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
